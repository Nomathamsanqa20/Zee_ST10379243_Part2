@model Zee_ST10379243_Part2.Models.IncidentReport
@{
    ViewData["Title"] = "Incident Details";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-10">
            <div class="card">
                <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
                    <h4 class="mb-0">Incident Details</h4>
                    <span class="badge bg-@GetUrgencyColor(Model.UrgencyLevel) fs-6">@Model.UrgencyLevel</span>
                </div>
                <div class="card-body">
                    <div class="row mb-4">
                        <div class="col-md-8">
                            <h3 class="text-danger">@Model.Title</h3>
                            <p class="lead">@Model.Description</p>
                        </div>
                        <div class="col-md-4">
                            <div class="card bg-light">
                                <div class="card-body">
                                    <h6>Incident Information</h6>
                                    <div class="mb-2">
                                        <strong>Status:</strong>
                                        <span class="badge bg-@GetStatusColor(Model.Status) float-end">@Model.Status</span>
                                    </div>
                                    <div class="mb-2">
                                        <strong>Type:</strong>
                                        <span class="float-end">@Model.DisasterType</span>
                                    </div>
                                    <div class="mb-2">
                                        <strong>Reported:</strong>
                                        <span class="float-end">@Model.ReportedAt.ToString("MMM dd, yyyy HH:mm")</span>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6">
                            <div class="card mb-3">
                                <div class="card-header">
                                    <h6 class="mb-0"><i class="fas fa-map-marker-alt"></i> Location Details</h6>
                                </div>
                                <div class="card-body">
                                    <p><strong>Location:</strong> @Model.Location</p>
                                    <p><strong>Affected Areas:</strong> @(Model.AffectedAreas ?? "Not specified")</p>
                                    <p><strong>Incident Date:</strong> @Model.IncidentDate.ToString("MMMM dd, yyyy 'at' HH:mm")</p>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="card mb-3">
                                <div class="card-header">
                                    <h6 class="mb-0"><i class="fas fa-user"></i> Reporter Information</h6>
                                </div>
                                <div class="card-body">
                                    <p><strong>Reported By:</strong> @Model.User?.Username</p>
                                    <p><strong>Contact Email:</strong> @Model.User?.Email</p>
                                    <p><strong>Report Time:</strong> @Model.ReportedAt.ToString("MMMM dd, yyyy 'at' HH:mm")</p>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="mt-4">
                        <a asp-action="Index" class="btn btn-secondary">
                            <i class="fas fa-arrow-left"></i> Back to Incidents
                        </a>
                        <a asp-controller="Donation" asp-action="Create" class="btn btn-success ms-2">
                            <i class="fas fa-donate"></i> Donate to Help
                        </a>
                        <a asp-controller="Volunteer" asp-action="Register" class="btn btn-warning ms-2">
                            <i class="fas fa-hands-helping"></i> Volunteer to Assist
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@functions {
    string GetUrgencyColor(string urgency)
    {
        return urgency?.ToLower() switch
        {
            "critical" => "danger",
            "high" => "warning",
            "medium" => "info",
            "low" => "success",
            _ => "secondary"
        };
    }

    string GetStatusColor(string status)
    {
        return status?.ToLower() switch
        {
            "pending" => "warning",
            "under review" => "info",
            "in progress" => "primary",
            "resolved" => "success",
            _ => "secondary"
        };
    }
}