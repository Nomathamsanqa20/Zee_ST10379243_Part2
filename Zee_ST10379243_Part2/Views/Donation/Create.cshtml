@model Zee_ST10379243_Part2.Models.DonationViewModel
@{
    ViewData["Title"] = "Make Donation";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow">
                <div class="card-header bg-success text-white">
                    <h4 class="mb-0"><i class="fas fa-donate"></i> Make a Donation</h4>
                </div>
                <div class="card-body">
                    @if (TempData["SuccessMessage"] != null)
                    {
                        <div class="alert alert-success">
                            @TempData["SuccessMessage"]
                        </div>
                    }

                    <form asp-action="Create" method="post">
                        @Html.AntiForgeryToken()
                        <div asp-validation-summary="All" class="alert alert-danger"></div>

                        <!-- Donation Type -->
                        <div class="form-group mb-3">
                            <label asp-for="DonationType" class="form-label"></label>
                            <select asp-for="DonationType" class="form-select" id="donationType">
                                <option value="">-- Select Donation Type --</option>
                                <option value="Food">Food Supplies</option>
                                <option value="Clothing">Clothing</option>
                                <option value="Medical">Medical Supplies</option>
                                <option value="Money">Financial Donation</option>
                                <option value="Other">Other</option>
                            </select>
                            <span asp-validation-for="DonationType" class="text-danger"></span>
                        </div>

                        <!-- Item Description -->
                        <div class="form-group mb-3">
                            <label asp-for="ItemDescription" class="form-label"></label>
                            <textarea asp-for="ItemDescription" class="form-control" rows="3"
                                      placeholder="Describe what you're donating (e.g., 'Canned food items', 'Winter clothing', 'First aid kits')"></textarea>
                            <span asp-validation-for="ItemDescription" class="text-danger"></span>
                        </div>

                        <div class="row">
                            <!-- Quantity -->
                            <div class="col-md-6">
                                <div class="form-group mb-3">
                                    <label asp-for="Quantity" class="form-label"></label>
                                    <input asp-for="Quantity" class="form-control" type="number" step="0.01" min="0.01" />
                                    <span asp-validation-for="Quantity" class="text-danger"></span>
                                </div>
                            </div>
                            <!-- Unit -->
                            <div class="col-md-6">
                                <div class="form-group mb-3">
                                    <label asp-for="Unit" class="form-label"></label>
                                    <input asp-for="Unit" class="form-control" placeholder="kg, pieces, boxes, etc." />
                                    <span asp-validation-for="Unit" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <!-- Target Area -->
                        <div class="form-group mb-3">
                            <label asp-for="TargetArea" class="form-label"></label>
                            <input asp-for="TargetArea" class="form-control" placeholder="Specific area or community you want to help" />
                            <span asp-validation-for="TargetArea" class="text-danger"></span>
                        </div>

                        <!-- Special Instructions (Optional) -->
                        <div class="form-group mb-3">
                            <label asp-for="SpecialInstructions" class="form-label"></label>
                            <textarea asp-for="SpecialInstructions" class="form-control" rows="2"
                                      placeholder="Any special delivery instructions or notes"></textarea>
                            <span asp-validation-for="SpecialInstructions" class="text-danger"></span>
                        </div>

                        <!-- Info Note -->
                        <div class="alert alert-info">
                            <i class="fas fa-info-circle"></i>
                            <strong>Thank you for your generosity!</strong> Your donation will help provide essential support to communities in need.
                        </div>

                        <!-- Buttons -->
                        <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                            <a asp-action="Index" class="btn btn-secondary me-md-2">Cancel</a>
                            <button type="submit" class="btn btn-success">
                                <i class="fas fa-paper-plane"></i> Submit Donation
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}