@model Zee_ST10379243_Part2.Models.Volunteer
@{
    ViewData["Title"] = "My Volunteer Registration";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header bg-info text-white">
                    <h4 class="mb-0"><i class="fas fa-user-check"></i> My Volunteer Registration</h4>
                </div>
                <div class="card-body">
                    @if (TempData["SuccessMessage"] != null)
                    {
                        <div class="alert alert-success">
                            @TempData["SuccessMessage"]
                        </div>
                    }

                    @if (Model == null)
                    {
                        <div class="text-center py-4">
                            <i class="fas fa-users fa-3x text-muted mb-3"></i>
                            <h5>You are not registered as a volunteer yet</h5>
                            <p class="text-muted">Join our volunteer team to help communities in need</p>
                            <a asp-action="Register" class="btn btn-warning">
                                <i class="fas fa-user-plus"></i> Register as Volunteer
                            </a>
                        </div>
                    }
                    else
                    {
                        <div class="row">
                            <div class="col-md-4 text-center">
                                <div class="bg-light rounded-circle d-inline-flex align-items-center justify-content-center mb-3"
                                     style="width: 100px; height: 100px;">
                                    <i class="fas fa-hands-helping fa-2x text-warning"></i>
                                </div>
                                <span class="badge bg-success fs-6">@Model.Status</span>
                            </div>
                            <div class="col-md-8">
                                <dl class="row">
                                    <dt class="col-sm-4">Registration Date:</dt>
                                    <dd class="col-sm-8">@Model.RegisteredAt.ToString("MMMM dd, yyyy")</dd>

                                    <dt class="col-sm-4">Skills:</dt>
                                    <dd class="col-sm-8">@Model.Skills</dd>

                                    <dt class="col-sm-4">Availability:</dt>
                                    <dd class="col-sm-8">@Model.Availability</dd>

                                    <dt class="col-sm-4">Preferred Location:</dt>
                                    <dd class="col-sm-8">@Model.PreferredLocation</dd>

                                    <dt class="col-sm-4">Transportation:</dt>
                                    <dd class="col-sm-8">
                                        @if (Model.HasTransportation)
                                        {
                                            <span class="badge bg-success">Available</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-secondary">Not Available</span>
                                        }
                                    </dd>

                                    <dt class="col-sm-4">Emergency Contact:</dt>
                                    <dd class="col-sm-8">@Model.EmergencyContact</dd>
                                </dl>
                            </div>
                        </div>

                        <div class="mt-4">
                            <a asp-action="Index" class="btn btn-outline-primary">
                                <i class="fas fa-users"></i> View All Volunteers
                            </a>
                            <a asp-controller="Incident" asp-action="Index" class="btn btn-outline-danger ms-2">
                                <i class="fas fa-exclamation-triangle"></i> View Current Incidents
                            </a>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>